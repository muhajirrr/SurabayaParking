<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPencarianZona"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pencarian Zona"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivFoto"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/tvHargaMobil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPencarianZona"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvSaranZona"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="Saran Zona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/tvPencarianZona"
        fontPath="fonts/roboto_regular.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvJamOperasional"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Jam Operasional : 09.00 - 20.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/tvSaranZona"
        fontPath="fonts/roboto_regular.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvWaktuTempuh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Waktu Tempuh    : 600 - 1000m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/tvJamOperasional"
        fontPath="fonts/roboto_regular.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvHargaMobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Mobil : Rp.5000"
        app:layout_constraintEnd_toStartOf="@+id/tvHargaMotor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/ivFoto"
        app:layout_constraintTop_toBottomOf="@+id/tvWaktuTempuh"
        fontPath="fonts/roboto_regular.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvHargaMotor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Motor : Rp.2000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvHargaMobil"
        app:layout_constraintTop_toBottomOf="@+id/tvWaktuTempuh"
        fontPath="fonts/roboto_regular.ttf"
        tools:ignore="MissingPrefix"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnDirection"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_shape_capsule"
        android:paddingBottom="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="0dp"
        android:text="Direction"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHargaMobil"
        />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_shape_capsule"
        android:paddingBottom="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="0dp"
        android:text="Chatroom"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDirection"
        app:layout_constraintTop_toBottomOf="@+id/tvHargaMobil" />

</android.support.constraint.ConstraintLayout>